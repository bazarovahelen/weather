<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="458.0" prefWidth="360.0" spacing="20.0" style="-fx-background-color: #C0C0C0; -fx-border-color: DarkBlue;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pogodnik.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text fill="INDIGO" strokeType="OUTSIDE" strokeWidth="0.0" text="ПОГОДА">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Text>
   <TextField id="city" fx:id="city" style="-fx-border-color: DarkBlue; -fx-pref-column-count: red;" text="Введите город">
      <font>
         <Font size="18.0" />
      </font>
   </TextField>
    <Button fx:id="getData" onAction="#onHelloButtonClick" text="Узнать погоду">
      <font>
         <Font name="System Bold Italic" size="18.0" />
      </font>
   </Button>
   <Text fx:id="temp_info" fill="INDIGO" strokeType="OUTSIDE" strokeWidth="0.0" text="Информация:">
      <font>
         <Font size="26.0" />
      </font>
   </Text>
   <Text fx:id="temp_feels" fill="ROYALBLUE" strokeType="OUTSIDE" strokeWidth="0.0" text="Температура:">
      <font>
         <Font name="System Bold Italic" size="22.0" />
      </font>
   </Text>
   <Text fx:id="temp_max" fill="ROYALBLUE" strokeType="OUTSIDE" strokeWidth="0.0" text="Максимум:">
      <font>
         <Font name="System Bold Italic" size="22.0" />
      </font>
   </Text>
   <Text fx:id="temp_min" fill="ROYALBLUE" strokeType="OUTSIDE" strokeWidth="0.0" text="Минимум:">
      <font>
         <Font name="System Bold Italic" size="22.0" />
      </font>
   </Text>
   <Text fx:id="pressure" fill="ROYALBLUE" strokeType="OUTSIDE" strokeWidth="0.0" text="Давление:">
      <font>
         <Font name="System Bold Italic" size="22.0" />
      </font>
   </Text>
</VBox>
